<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/background012"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/material_20"
            android:background="@color/blue_primary"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/material_10"
            android:background="@color/blue_primary">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_nav_back"
                android:layout_centerVertical="true"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/head"
                android:layout_width="@dimen/material_25"
                android:layout_height="@dimen/material_25"
                android:layout_toLeftOf="@+id/tv_title"
                android:layout_marginRight="@dimen/material_5"
                fresco:roundAsCircle="true"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#大师的影像世界#"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_dy"
                android:layout_marginRight="@dimen/material_5"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_dy"
                />
            <TextView
                android:id="@+id/tv_dy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订阅"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_more"
                android:layout_marginRight="@dimen/material_5"
                android:textColor="@color/textcolor09"
                android:textSize="@dimen/material_font_13"
                />
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/material_25"
                android:layout_height="@dimen/material_25"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_nav_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/ultra_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_250"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/ultra_viewpager"
        android:padding="@dimen/material_5"
        android:layout_above="@+id/re_bottom"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/material_font_12"
            android:text="1/1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/tv_indicator"
            android:textColor="@color/white"
            android:text="图片描述, 图片描述, 图片描述..."
            android:layout_marginLeft="@dimen/material_10"
            android:textSize="@dimen/material_font_12"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/re_bottom"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/background09"
        android:padding="@dimen/material_5"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/ret_circle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="写评论~"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textColorHint="@color/textcolor08"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            rv:rv_textColor="@color/white"
            rv:rv_backgroundColor="@color/background010"
            rv:rv_radius="10dp"
            rv:rv_radiusHalfHeightEnable="true"
            />
        <ImageView
            android:id="@+id/iv_pl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/material_10"
            android:layout_marginRight="@dimen/material_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_footer_pl"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/material_10"
            android:layout_marginRight="@dimen/material_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_footer_sc"
            />
        <ImageView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/material_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_footer_share"
            />
    </LinearLayout>
</RelativeLayout>